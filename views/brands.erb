<h2>Your Brands</h2>

<% if @brands.any? %>
  <ul>
    <% @brands.each do |brand| %>
      <li><%= brand.name %> - <%= brand.price %></li>
    <% end %>
  </ul>
<% else %>
  <p>You have not added any brands yet!</p>
<% end %>

<h3>Add a Brand</h3>
<form class="" action="/brands/add" method="post">
  <div class="form-group">
    <label for="name" class="control-label">Brand Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="price" class="control-label">Price (USD)</label>
    <input type="number" name="price" class="form-control" step="0.01" min="0.00" placeholder="0.00">
  </div>
  <button type="submit" class="btn">Add Brand</button>
</form>
